<% if current_user.is_favorite?(micropost) %>
  <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: "submit", class: "btn btn-danger btn-sm mx-1") do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag(type: "submit", class: "btn btn-outline-danger btn-sm mx-1") do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
<% end %>